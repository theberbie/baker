<div class="booyah-box col-sm-4 col-xs-10 col-sm-offset-4 col-xs-offset-1">


<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>
<div class="form-inputs">

  <%= f.input :name%>
  <%= f.input :username %>
  <%= f.label "Pick an Account Type" %>
  <%= f.select :type, ["Artisan", "Customer"] %>
    
  <%= f.input :image%>

<br />
  
</div>

<div class="form-inputs text-center">
<%= f.label 'Date of Birth' %>
<%= f.date_field :date_of_birth %>

<%= f.label 'Phone Number'%>
<%= f.telephone_field :phone_number %>
 
</div>

<div class="form-inputs">
 <%= f.label 'Vendor Permit' %>
 <%= f.input :image %>
</div>



  <div class="form-inputs">
    <%= f.input :email, required: true, autofocus: true %>
    <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
    <%= f.input :password_confirmation, required: true %>
  </div>
  <br />

  <div class="form-actions">
    <%= f.button :submit, 'Sign Up', class:"btn btn-md btn-primary" %>
    <br />
  </div>
<% end %>

<%= render "users/shared/links" %>

</div>